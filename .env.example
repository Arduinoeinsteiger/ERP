# SwissAirDry Environment Configuration Example
# Copy this file to .env and adjust the values as needed

# Database Settings
PGUSER=postgres
PGPASSWORD=postgres
PGHOST=localhost
PGPORT=5432
PGDATABASE=swissairdry
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/swissairdry

# MQTT Settings
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Flask Settings
FLASK_SECRET_KEY=change-me-in-production
FLASK_APP=main.py
FLASK_ENV=development

# Nextcloud Settings
NEXTCLOUD_DB=nextcloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=admin
NEXTCLOUD_TRUSTED_DOMAINS=localhost

# ExApp Settings
EXAPP_SECRET=change-me-in-production